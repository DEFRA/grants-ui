<table class="govuk-table">
  <caption class="govuk-table__caption govuk-table__caption--s govuk-visually-hidden">{{ params.caption }}</caption>
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Name</th>
      <th scope="col" class="govuk-table__header">Purpose</th>
      <th scope="col" class="govuk-table__header">Expires</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    {% for cookie in params.cookies %}
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__header">{{ cookie.name }}</th>
        <td class="govuk-table__cell">{{ cookie.purpose }}</td>
        <td class="govuk-table__cell">{{ cookie.expires }}</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
