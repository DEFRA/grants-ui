{%- set rawHours = params.ttlMs / (1000 * 60 * 60) -%}
{%- if rawHours >= 24 -%}
    {%- set days = (rawHours / 24) | round -%}
    {%- if days == 1 -%}1 day{%- else -%}{{ days }} days{%- endif -%}
{%- else -%}
    {%- set hours = rawHours | round -%}
    {%- if hours == 1 -%}1 hour{%- else -%}{{ hours }} hours{%- endif -%}
{%- endif -%}
