{% extends "layouts/page.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block pageTitle %}
  {{ "Error: " if errors | length }}{{ pageTitle | evaluate }} | {{ name | default(serviceName) }}
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "https://www.gov.uk/",
    classes: "govuk-header--full-width-border",
    containerClasses: "govuk-width-container",
    rebrand: true
  }) }}

  {{ govukServiceNavigation({ serviceName: name | default(serviceName) , serviceUrl: serviceUrl }) }}

  <div class="govuk-width-container">
    {{ govukPhaseBanner({
      tag: {
        text: "Beta"
      },
      text: 'This is a new service.'
    }) }}
  </div>

    {{ defraAccountBar({
      organisationName: auth.organisationName,
      organisationId: auth.organisationId | default(""),
      name: auth.name
    }) }}

  <input type="hidden" id="csrf-token" value="{{ crumb }}">
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {% if backLink %}
    {{ govukBackLink(backLink) }}
  {% endif %}
  {% if backToTaskList %}
    <span class="govuk-!-margin-left-1 govuk-!-border-left govuk-!-padding-left-2"><a href="{{ backToTaskList.href }}" class="govuk-link govuk-link--text-colour">{{ backToTaskList.text }}</a></span>
  {% endif %}
{% endblock %}
