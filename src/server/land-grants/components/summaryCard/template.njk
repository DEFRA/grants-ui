{%- set headingLevel = params.title.headingLevel or 2 -%}

<div class="govuk-summary-card {{ params.classes }}">
  <div class="govuk-summary-card__title-wrapper">
    <h{{ headingLevel }} class="govuk-summary-card__title {{ params.title.classes }}">
      {{ params.title.text }}
    </h{{ headingLevel }}>
    
    {% if params.headerActions %}
      <ul class="govuk-summary-card__actions">
        {% for action in params.headerActions.items or [params.headerActions] %}
          <li class="govuk-summary-card__action">
            {{ action.html | safe or ('<a class="govuk-link ' + (action.classes or '') + '" href="' + action.href + '">' + action.text + '</a>') | safe }}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>

  <div class="govuk-summary-card__content {{ params.content.classes }}">
    {{ caller() | trim }}
  </div>

 {% if params.footerActions %}
    <div class="govuk-summary-card__footer {{ params.footerActions.classes }}">
      {{ params.footerActions.html | safe }}
    </div>
  {% endif %}
</div>