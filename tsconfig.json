{
  "compilerOptions": {
    "lib": ["ES2020", "dom"],
    "allowJs": true,
    "checkJs": true,
    "module": "NodeNext",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "types": ["vitest", "vitest/globals"]
  },
  "exclude": [".cache", ".public", ".server", "coverage", "node_modules", "src/**/*.test.js"],
  "include": ["**/*.cjs", "**/*.js", ".eslintrc.*", ".prettierrc.*", "types/**/*.d.ts"]
}
